                            <span asp-validation-for="SelectedMobileTechs" class="text-danger"></span>
                        </div>
                    </div>

                    @*one selection*@
                    <div class="form-row mb-4">
                        <div class="form-group col-md-2">
                            <label asp-for="SelectedBrand"></label>
                            <select asp-for="SelectedBrand" asp-items="@Model.Brands" class="form-control"></select>
                            <span asp-validation-for="SelectedBrand" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="SelectedScreenTech"></label>
                            <select asp-for="SelectedScreenTech" asp-items="@Model.ScreenTechs" class="form-control"></select>
                            <span asp-validation-for="SelectedScreenTech" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="SelectedSize"></label>
                            <select asp-for="SelectedSize" asp-items="@Model.Sizes" class="form-control"></select>
                            <span asp-validation-for="SelectedSize" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="SelectedSIMDesc"></label>
                            <select asp-for="SelectedSIMDesc" asp-items="@Model.SIMDescs" class="form-control"></select>
                            <span asp-validation-for="SelectedSIMDesc" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="SelectedBackGuard"></label>
                            <select asp-for="SelectedBackGuard" asp-items="@Model.BackGuards" class="form-control"></select>
                            <span asp-validation-for="SelectedBackGuard" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="SelectedInternalStorage"></label>
                            <select asp-for="SelectedInternalStorage" asp-items="@Model.InternalStorages" class="form-control"></select>
                            <span asp-validation-for="SelectedInternalStorage" class="text-danger"></span>
                        </div>
                    </div>

                    @*one selection*@
                    <div class="form-row mb-4">
                        <div class="form-group col-md-2">
                            <label asp-for="SelectedRAM"></label>
                            <select asp-for="SelectedRAM" asp-items="@Model.RAMs" class="form-control"></select>
                            <span asp-validation-for="SelectedRAM" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="SelectedMemoryCardSupport"></label>
                            <select asp-for="SelectedMemoryCardSupport" asp-items="@Model.MemoryCardSupports" class="form-control"></select>
                            <span asp-validation-for="SelectedMemoryCardSupport" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="SelectedMobileCategory"></label>
                            <select asp-for="SelectedMobileCategory" asp-items="@Model.MobileCategories" class="form-control"></select>
                            <span asp-validation-for="SelectedMobileCategory" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="SelectedMobileCategory"></label>
                            <select asp-for="SelectedMobileCategory" asp-items="@Model.MobileCategories" class="form-control"></select>
                            <span asp-validation-for="SelectedMobileCategory" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="SelectedOS"></label>
                            <select asp-for="SelectedOS" asp-items="@Model.OSs" class="form-control"></select>
                            <span asp-validation-for="SelectedOS" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="SelectedRearCamera"></label>
                            <select asp-for="SelectedRearCamera" asp-items="@Model.RearCameras" class="form-control"></select>
                            <span asp-validation-for="SelectedRearCamera" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="form-row mb-4">
                        <div class="form-group col-md-2">
                            <label asp-for="ScreenPixelsPerInch"></label>
                            <input asp-for="ScreenPixelsPerInch" type="number" class="form-control" />
                            <span asp-validation-for="ScreenPixelsPerInch" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="SIMCardNumber"></label>
                            <input asp-for="SIMCardNumber" type="number" class="form-control" />
                            <span asp-validation-for="SIMCardNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="Bluetooth"></label>
                            <input asp-for="Bluetooth" class="form-control" />
                            <span asp-validation-for="Bluetooth" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="BluetoothVersion"></label>
                            <input asp-for="BluetoothVersion" type="number" class="form-control" />
                            <span asp-validation-for="BluetoothVersion" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="Flash"></label>
                            <input asp-for="Flash" class="form-control" />
                            <span asp-validation-for="Flash" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="Is64Bit"></label>
                            <input asp-for="Is64Bit" class="form-control">
                            <span asp-validation-for="Is64Bit" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row mb-4">
                        <div class="form-group col-md-5">
                            <label asp-for="BodyStructure"></label>
                            <input asp-for="BodyStructure" class="form-control" />
                            <span asp-validation-for="BodyStructure" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-5">
                            <label asp-for="Model"></label>
                            <input asp-for="Model" class="form-control">
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="IntrodutionDate"></label>
                            <input asp-for="IntrodutionDate" class="form-control">
                            <span asp-validation-for="IntrodutionDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row mb-4">
                        <div class="form-group col-md-5">
                            <label asp-for="Chip"></label>
                            <input asp-for="Chip" class="form-control">
                            <span asp-validation-for="Chip" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="CPU"></label>
                            <input asp-for="CPU" class="form-control">
                            <span asp-validation-for="CPU" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="CPUFrequency"></label>
                            <input asp-for="CPUFrequency" class="form-control">
                            <span asp-validation-for="CPUFrequency" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row mb-4">
                        <div class="form-group col-md-6">
                            <label asp-for="OtherFeatures"></label>
                            <input asp-for="OtherFeatures" class="form-control">
                            <span asp-validation-for="OtherFeatures" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Wifi"></label>
                            <input asp-for="Wifi" class="form-control" />
                            <span asp-validation-for="Wifi" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row mb-4">
                        <div class="form-group col-md-4">
                            <label asp-for="GPU"></label>
                            <input asp-for="GPU" class="form-control">
                            <span asp-validation-for="GPU" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="CommunicationPorts"></label>
                            <input asp-for="CommunicationPorts" class="form-control" />
                            <span asp-validation-for="CommunicationPorts" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="SelectedPhotoResolution"></label>
                            <select asp-for="SelectedPhotoResolution" asp-items="@Model.PhotoResolutions" class="form-control"></select>
                            <span asp-validation-for="SelectedPhotoResolution" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="SalesPrice"></label>
                            <input asp-for="SalesPrice" class="form-control">
                            <span asp-validation-for="SalesPrice" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row mb-4">
                        <div class="form-group col-md-12">
                            <label asp-for="CameraCapabilitiesDescriptions"></label>
                            <input asp-for="CameraCapabilitiesDescriptions" class="form-control" />
                            <span asp-validation-for="CameraCapabilitiesDescriptions" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="form-row mb-4">
                        <div class="form-group col-md-12">
                            <label asp-for="FilmingDescriptions"></label>
                            <input asp-for="FilmingDescriptions" class="form-control" />
                            <span asp-validation-for="FilmingDescriptions" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row mb-4">
                        <div class="form-group col-md-12">
                            <label asp-for="FrontCameraDescriptions"></label>
                            <input asp-for="FrontCameraDescriptions" class="form-control" />
                            <span asp-validation-for="FrontCameraDescriptions" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row mb-4">
                        <div class="form-group col-md-12">
                            <label asp-for="BatterySpecifications"></label>
                            <input asp-for="BatterySpecifications" class="form-control" />
                            <span asp-validation-for="BatterySpecifications" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row mb-4">
                        <div class="form-group col-md-12">
                            <div class="custom-file-container" data-upload-id="mobileImages">
                                <label asp-for="Images"></label>
                                <label><a href="javascript:void(0)" class="custom-file-container__image-clear" title="Clear Image">x</a></label>
                                <label class="custom-file-container__custom-file">
                                    <input asp-for="Images" type="file" class="custom-file-container__custom-file__custom-file-input" multiple>
                                    <input type="hidden" name="MAX_FILE_SIZE" value="10485760" />
                                    <span class="custom-file-container__custom-file__custom-file-control"></span>
                                </label>
                                <span asp-validation-for="Images" class="text-danger"></span>
                                <div class="custom-file-container__image-preview"></div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mt-3">ثبت محصول</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
    <script src="~/theme/assets/js/scrollspyNav.js"></script>
    <script src="~/theme/plugins/file-upload/file-upload-with-preview.min.js"></script>

    <script src="~/theme/plugins/flatpickr/flatpickr.js"></script>

    <script>
        var secondUpload = new FileUploadWithPreview('mobileImages');

        var f1 = flatpickr(document.getElementById('IntrodutionDate'));

    </script>
}