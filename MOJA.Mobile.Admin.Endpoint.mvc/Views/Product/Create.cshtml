                        <div class="form-group col-md-2">
                            <label asp-for="SelectedColors"></label>
                            <select asp-for="SelectedColors" asp-items="@Model.Colors" class="form-control" multiple></select>
                            <span asp-validation-for="SelectedColors" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="SelectedSpecialFeatures"></label>
                            <select asp-for="SelectedSpecialFeatures" asp-items="@Model.SpeacialFeatures" multiple class="form-control"></select>
                            <span asp-validation-for="SelectedSpecialFeatures" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="SelectedCommunicationNetworks"></label>
                            <select asp-for="SelectedCommunicationNetworks" asp-items="@Model.CommunicationNetworks" multiple class="form-control"></select>
                            <span asp-validation-for="SelectedCommunicationNetworks" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="SelectedCommunicationTechs"></label>
                            <select asp-for="SelectedCommunicationTechs" asp-items="@Model.CommunicationTechs" multiple class="form-control"></select>
                            <span asp-validation-for="SelectedCommunicationTechs" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="SelectedSensors"></label>
                            <select asp-for="SelectedSensors" asp-items="@Model.Sensors" multiple class="form-control"></select>
                            <span asp-validation-for="SelectedSensors" class="text-danger"></span>
                        </div>
